.container
  .row
    .col-md-4
      %p= link_to 'Back', root_url
.container
  .jumbotron
    .row
      .col-md-12
        %h1 Listing products
        %table.table.table-condensed.table-hover.table-bordered
          %tr
            %th Title
            %th Description
            %th Price
            - products.each do |product|
              %tr
                %td= link_to product.title, category_product_path(product.category, product)
                %td= product.description
                %td= product.price
                - if current_user && current_user.admin?
                  %td= link_to 'Edit', edit_category_product_path(product.category, product)
                  %td= link_to 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }

          
